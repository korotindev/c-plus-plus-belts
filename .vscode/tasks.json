{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Regenerate cmake files",
            "type": "shell",
            "command": "mkdir -p build && cd build && cmake ..",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "cd build && cmake --build . -j $(nproc)",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Regenerate cmake files"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}